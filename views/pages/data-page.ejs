<% include ../_header.ejs %>

<div class="slider-wrap no-slanted">
    <div class="slider-item" style="background-image: url('img/hero_1.jpg');">

        <div class="container">
            <div class="row slider-text align-items-center justify-content-center">
                <div class="col-md-8 text-center col-sm-12 ">
                    <h1>Таблица с данными</h1>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="clearfix mb-5 pb-5 mt-5">
    <div class="row" >
        <div class="col-md-6 text-center heading-wrap m-auto">
            <h2>Список пользователей</h2>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">имя</th>
                    <th scope="col">email</th>
                    <th scope="col">роль</th>
                    <th scope="col">действие</th>
                </tr>
                </thead>
                <tbody>
                <% users.forEach(function (user, id) {%>
                    <tr>
                        <th><%= id+1%></th>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= user.role === 1 ? "пользователь" : user.role === 2 ? "админ" : "ресторан" %></td>
                        <td>
                            <form action="/users/<%= user.id %>" method="post"><button class="btn btn-danger" type="submit">удалить пользователя</button></form>
                        </td>
                    </tr>
                <%})%>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row" >
        <div class="col-md-6 text-center heading-wrap m-auto">
            <h2>Список ресторанов</h2>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">название</th>>
                    <th scope="col">действие</th>
                </tr>
                </thead>
                <tbody>
                <% restaurants.forEach(function (restaurant, id) {%>
                    <tr>
                        <th><%= id+1%></th>
                        <td><%= restaurant.name %></td>
                        <td>
                            <form action="/restaurant/<%= restaurant.id %>" method="post"><button class="btn btn-danger" type="submit">удалить ресторан</button></form>
                        </td>
                    </tr>
                <%})%>
                </tbody>
            </table>
        </div>
    </div>
</div>

<% include ../_footer.ejs %>
